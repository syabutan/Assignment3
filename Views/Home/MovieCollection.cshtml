@{
}

@model IEnumerable<Assignment3.Models.MovieInfo>

<!--View that lists out all the films that have been entered.-->
<div class="text-center p-2">
    <h2>Here are the movie collections</h2>
    <br />
    <br />
    <!--List table-->
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent to</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (Assignment3.Models.MovieInfo x in Model)
            {
                //Exclude input if the movie title is "Independence Day"
                @if (x.Title.ToUpper() == "INDEPENDENCE DAY")
                {
                }
                //Show input if the movie title is not "Independence Day"
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent_to</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>