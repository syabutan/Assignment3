@{
    ViewBag.Title = "Enter movies information";
}

@model Assignment3.Models.MovieInfo

<!--input form-->
<form asp-action="Movies" method="post" class="m-2">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited" class="form-control">
            <option value="">Select One</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Lent_to">Lent_to: </label>
        <input asp-for="Lent_to" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Your Application</button>

</form>